<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/notif_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/notif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Notifikasi"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/notif_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan notifikasi kustom Anda di sini"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/image_call_ended"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/bg_red_radius"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_call_end_24"/>
    </LinearLayout>
</LinearLayout>
